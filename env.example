# Twitter API Configuration
# Choose one of the following options:

# Option 1: TwitterAPI.io
TWITTERAPI_API_KEY=your_twitterapi_key_here
TWITTERAPI_BASE_URL=https://api.twitterapi.io

# Option 2: Apify
APIFY_API_TOKEN=your_apify_token_here
APIFY_BASE_URL=https://api.apify.com/v2

# Slack Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#your-channel-name
SLACK_BOT_TOKEN=xoxb-your-bot-token-here

# Application Configuration
NODE_ENV=development
PORT=3000
SCRAPE_INTERVAL_MINUTES=15
MAX_TWEETS_PER_RUN=50

# Database Configuration (for tracking processed tweets)
DB_FILE_PATH=./data/tweets.db

# Logging
LOG_LEVEL=info 